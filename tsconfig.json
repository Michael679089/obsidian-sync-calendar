{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",
    "target": "es2018",
    "allowJs": false,
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "types": [
      "node",
    ]
  },
}